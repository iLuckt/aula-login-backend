@model IEnumerable<Professores>

<style>

    :root {
        /* Variáveis de Cores */
        --color-background-dark: #121212; /* Fundo principal: Preto muito escuro */
        --color-surface: #262626; /* Superfícies (tabelas, forms): Cinza Escuro */
        --color-row-odd: #2c2c2c; /* Fundo da linha ímpar */
        --color-row-even: #333333; /* Fundo da linha par (Zebrado) */
        --color-text-light: #ffffff; /* Texto dos dados em BRANCO PURO */
        --color-accent-gold: #b8860b; /* Dourado Clássico */
        --color-accent-gold-hover: #d4af37; /* Dourado Claro para hover */
        --color-border: #444444; /* Borda sutil */
        --color-danger: #8b0000; /* Vermelho Escuro para Excluir */
    }


    /* Formulário de Busca */
    form {
        margin-bottom: 25px;
        padding: 20px;
        border: 1px solid var(--color-border);
        background-color: var(--color-surface);
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .form-control {
        background-color: #444444; /* Fundo do input */
        border: 1px solid var(--color-border);
        color: var(--color-text-light);
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: var(--color-accent-gold); /* Dourado no foco */
            box-shadow: 0 0 0 0.25rem rgba(184, 134, 11, 0.25);
        }

        .form-control::placeholder {
            color: #a0a0a0; /* Cinza médio para placeholder */
        }

    /* Botões Dourados (Pesquisar, Adicionar, Voltar) */
    .btn-primary {
        background-color: var(--color-accent-gold);
        border-color: var(--color-accent-gold);
        color: var(--color-background-dark); /* Texto escuro sobre o dourado */
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--color-accent-gold-hover);
            border-color: var(--color-accent-gold-hover);
            color: var(--color-background-dark);
            transform: translateY(-1px);
        }

    /* Tabela de Dados */
    .table {
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        overflow: hidden;
        width: 100%;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
        margin-top: 20px;
    }

        /* Cabeçalho da Tabela - Escuro com Dourado */
        .table thead {
            background-color: #1e1e1e;
            color: var(--color-accent-gold); /* Texto do cabeçalho em dourado */
            border-bottom: 2px solid var(--color-accent-gold);
        }

        .table th {
            vertical-align: middle;
            padding: 12px 8px;
            text-transform: uppercase;
            font-weight: 600;
            border-bottom: 2px solid var(--color-accent-gold);
        }

        /* Corpo da Tabela - Fundo Escuro, Texto Branco */
        .table tbody {
            color: var(--color-text-light); /* Texto dos dados em BRANCO PURO */
        }

            .table tbody tr {
                transition: background-color 0.3s ease;
            }

                /* Zebrado Escuro */
                .table tbody tr:nth-child(odd) {
                    background-color: var(--color-row-odd);
                }

                .table tbody tr:nth-child(even) {
                    background-color: var(--color-row-even);
                }

                .table tbody tr:hover {
                    background-color: #444444; /* Destacar linha no hover */
                    box-shadow: inset 3px 0 0 0 var(--color-accent-gold); /* Borda dourada lateral no hover */
                }

        .table td {
            border-top: 1px solid var(--color-border);
            vertical-align: middle;
            padding: 10px 8px;
        }

        /* Mensagem de "Nenhum professor" */
        .table tbody tr td[colspan="10"] { /* Alterado para 10 colunas, se necessário */
            font-style: italic;
            color: #a0a0a0;
            padding: 30px;
            background-color: var(--color-surface);
            text-align: center;
        }

    /* Botão de Excluir */
    .btn-sm.btn-danger {
        background-color: var(--color-danger);
        border-color: var(--color-danger);
        color: var(--color-text-light);
    }

        .btn-sm.btn-danger:hover {
            background-color: #a52a2a;
            border-color: #a52a2a;
        }

    /* Área de Ações Finais */
    .text-center:last-child {
        padding-top: 25px;
        margin-top: 25px;
        border-top: 1px solid var(--color-border);
    }
</style>

<div>
    <form method="get" asp-controller="Professor" asp-action="Index">
        <input type="text" name="searchTerm" placeholder="Buscar professor..." class="form-control" style="width:300px; display:inline-block;" />
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Disciplina</th>
            <th scope="col" class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>

        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Nenhum professor registrado até o momento</td>
            </tr>
        }
        else
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.Disciplina</td>

                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a type="submit" class="btn btn-sm btn-primary" role="button" asp-controller="Professor" asp-route-id="@item.Id" asp-action="EditarProfessor">Editar</a>
                            <a type="submit" class="btn btn-sm btn-danger" role="button" asp-controller="Professor" asp-route-id="@item.Id" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>
                </tr>
            }

        }

    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Professor" asp-action="AdicionarProfessor"> Adicionar Professor</a>
    <a class="btn btn-primary" type="button" asp-controller="Home" asp-action="Index"> Voltar</a>
</div>