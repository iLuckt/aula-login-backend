@model IEnumerable<Aluno>

<table class="table">
    <thead>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

        <tr>
            <th scope="col">Matricula</th>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">CEP</th>
            <th scope="col">Endereço</th>
            <th scope="col">Bairro</th>
            <th scope="col">Cidade</th>
            <th scope="col">Número</th>
            <th scope="col" class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        { 
            <tr>
                <td>@item.Matricula</td>
                <td>@item.Name</td>
                <td>@item.Cpf</td>
                <td>@item.DataNascimento</td>
                <td>@item.Cep</td>
                <td>@item.Endereco</td>
                <td>@item.Bairro</td>
                <td>@item.Cidade</td>
                <td>@item.Numero</td>
                <td class="text-end">
                    <div class="btn-group" role="group">
                        <a class="btn btn-sm btn-primary" asp-controller="Aluno" asp-action="EditarAluno" asp-route-id="@item.Id" title="Editar">
                            <i class="bi bi-pencil-fill"></i> Editar
                        </a>
                        <a class="btn btn-sm btn-danger" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@item.Id" title="Excluir">
                            <i class="bi bi-trash-fill"></i> Excluir
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="text-center mt-4">
    <a class="btn btn-primary" asp-controller="Aluno" asp-action="AdicionarAluno">Adicionar Aluno</a>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
</div>
