@model Aluno

<style>
    /* Estilos Profissionais - Paleta Cinza Escuro e Dourado (Reutilizado) */

    :root {
        /* Variáveis de Cores */
        --color-background-dark: #121212; /* Fundo principal: Preto muito escuro */
        --color-surface: #1e1e1e; /* Superfícies (formulários, painéis): Cinza Escuro */
        --color-text-light: #f0f0f0; /* Texto claro (quase branco) */
        --color-accent-gold: #b8860b; /* Dourado Clássico (Goldenrod Escuro) */
        --color-accent-gold-hover: #d4af37; /* Dourado Claro para hover */
        --color-border: #333333; /* Borda sutil */
        --color-secondary: #555555; /* Cinza para botões secundários */
        --color-secondary-hover: #777777;
    }

    body {
        background-color: var(--color-background-dark);
        color: var(--color-text-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 30px;
    }

    /* Título da Página */
    h2 {
        color: var(--color-accent-gold);
        border-bottom: 2px solid var(--color-border);
        padding-bottom: 10px;
        margin-bottom: 25px;
        text-transform: uppercase;
        font-weight: 600;
    }

    /* Formulário e Grupos */
    form {
        background-color: var(--color-surface);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5); /* Sombra proeminente */
        max-width: 600px; /* Limita a largura para melhor leitura */
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    /* Labels */
    label {
        color: var(--color-text-light);
        display: block;
        margin-bottom: 5px;
        font-weight: 400;
        text-transform: capitalize; /* Deixa as labels mais suaves */
    }

    /* Inputs */
    .form-control {
        background-color: var(--color-border);
        border: 1px solid #444444;
        color: var(--color-text-light);
        padding: 10px 12px;
        border-radius: 5px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            background-color: #333333;
            border-color: var(--color-accent-gold); /* Dourado no foco */
            box-shadow: 0 0 0 0.2rem rgba(184, 134, 11, 0.3);
            color: var(--color-text-light);
        }

    /* Botão Primário (Salvar) - Dourado */
    .btn-primary {
        background-color: var(--color-accent-gold);
        border-color: var(--color-accent-gold);
        color: var(--color-background-dark);
        font-weight: bold;
        padding: 10px 25px;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--color-accent-gold-hover);
            border-color: var(--color-accent-gold-hover);
            transform: translateY(-2px); /* Efeito sutil de elevação */
        }

    /* Botão Secundário (Cancelar) - Cinza Sóbrio */
    .btn-secondary {
        background-color: var(--color-secondary);
        border-color: var(--color-secondary);
        color: var(--color-text-light);
        padding: 10px 25px;
        text-transform: uppercase;
        margin-left: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: var(--color-secondary-hover);
            border-color: var(--color-secondary-hover);
        }
</style>

<h2>Editar Aluno</h2>

<form asp-controller="Aluno"  asp-action="Editar" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cep"></label>
        <input asp-for="Cep" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Bairro"></label>
        <input asp-for="Bairro" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" />
    </div><br>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" asp-controller="Aluno" class="btn btn-secondary">Cancelar</a>
</form>